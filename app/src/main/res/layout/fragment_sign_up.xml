<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".view.auth.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_logo"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/right_guide"
            app:layout_constraintStart_toStartOf="@id/left_guide"
            app:layout_constraintTop_toBottomOf="@id/top_guide" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.32" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.68" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="48dp"
            android:autofillHints="username"
            android:padding="2dp"
            android:textColorHint="@color/primary_accent"
            app:boxCornerRadiusBottomEnd="@dimen/inp_corner_rad"
            app:boxCornerRadiusBottomStart="@dimen/inp_corner_rad"
            app:boxCornerRadiusTopEnd="@dimen/inp_corner_rad"
            app:boxCornerRadiusTopStart="@dimen/inp_corner_rad"
            app:boxStrokeColor="@color/primary_accent"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_accent"
            app:layout_constraintTop_toBottomOf="@+id/login_logo"
            app:startIconDrawable="@drawable/ic_user"
            app:startIconTint="@color/primary_accent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/full_name"
                android:inputType="textEmailAddress"
                android:textColor="@color/primary_accent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="@dimen/input_gap"
            android:autofillHints="emailAddress"
            android:padding="2dp"
            android:textColorHint="@color/primary_accent"
            app:boxCornerRadiusBottomEnd="@dimen/inp_corner_rad"
            app:boxCornerRadiusBottomStart="@dimen/inp_corner_rad"
            app:boxCornerRadiusTopEnd="@dimen/inp_corner_rad"
            app:boxCornerRadiusTopStart="@dimen/inp_corner_rad"
            app:boxStrokeColor="@color/primary_accent"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_accent"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/primary_accent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/primary_accent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="@dimen/input_gap"
            android:autofillHints="emailAddress"
            android:padding="2dp"
            android:textColorHint="@color/primary_accent"
            app:boxCornerRadiusBottomEnd="@dimen/inp_corner_rad"
            app:boxCornerRadiusBottomStart="@dimen/inp_corner_rad"
            app:boxCornerRadiusTopEnd="@dimen/inp_corner_rad"
            app:boxCornerRadiusTopStart="@dimen/inp_corner_rad"
            app:boxStrokeColor="@color/primary_accent"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_accent"
            app:layout_constraintTop_toBottomOf="@+id/email_input"
            app:passwordToggleDrawable="@drawable/password_toggle"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/primary_accent"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/primary_accent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/primary_accent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirm_password_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="@dimen/input_gap"
            android:autofillHints="emailAddress"
            android:padding="2dp"
            android:textColorHint="@color/primary_accent"
            app:boxCornerRadiusBottomEnd="@dimen/inp_corner_rad"
            app:boxCornerRadiusBottomStart="@dimen/inp_corner_rad"
            app:boxCornerRadiusTopEnd="@dimen/inp_corner_rad"
            app:boxCornerRadiusTopStart="@dimen/inp_corner_rad"
            app:boxStrokeColor="@color/primary_accent"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/primary_accent"
            app:layout_constraintTop_toBottomOf="@+id/password_input"
            app:passwordToggleDrawable="@drawable/password_toggle"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/primary_accent"
            app:startIconDrawable="@drawable/ic_key"
            app:startIconTint="@color/primary_accent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:textColor="@color/primary_accent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="@dimen/input_gap"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@color/primary_accent"
            app:backgroundTint="?attr/colorOnPrimary"
            app:cornerRadius="@dimen/inp_corner_rad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_password_input"
            app:strokeColor="@color/primary_accent"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/have_acc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/already_have_an_account"
            app:layout_constraintEnd_toEndOf="@id/password_input"
            app:layout_constraintStart_toStartOf="@id/password_input"
            app:layout_constraintTop_toBottomOf="@id/sign_in_btn" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_here"
            android:textColor="@color/primary_accent"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/password_input"
            app:layout_constraintStart_toStartOf="@id/password_input"
            app:layout_constraintTop_toBottomOf="@id/have_acc_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>