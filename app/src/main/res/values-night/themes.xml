<resources>
    <!-- Base application theme. -->
    <style name="Theme.BITERegister" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_accent</item>
        <item name="colorPrimaryVariant">@color/dark_bg</item>
        <item name="colorOnPrimary">@color/dark_bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnError">#D64C4C</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.BITERegister">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

</resources>